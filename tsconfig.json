{
    "compilerOptions": {
        "paths": {
            "@": [
                "./src"
            ],
            "util": [
                "./src/util"
            ],
            "type": [
                "./src/type"
            ],
            "service": [
                "./src/service"
            ]
        },
        "lib": [
            "DOM",
            "ES5",
            "ES2015"
        ],
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}